            <!-- â­ åŠ¨ç‰© Group å¡ç‰‡åŒºï¼ˆå±…ä¸­ï¼‰-->
            <VBox spacing="12" alignment="TOP_CENTER">
                <Label text="Discover by Animal Group:"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3a4a3f;" />

                <FlowPane fx:id="animalGroupPane"
                          alignment="CENTER"
                          hgap="12" vgap="12"
