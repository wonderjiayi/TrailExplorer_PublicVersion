                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Habitat Map"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2f4f4f;">
                        <HBox.hgrow>ALWAYS</HBox.hgrow>
                    </Label>

                    <Region HBox.hgrow="ALWAYS" />

